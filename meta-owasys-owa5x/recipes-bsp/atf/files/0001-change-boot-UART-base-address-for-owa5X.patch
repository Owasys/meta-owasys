Subject: [PATCH] change boot UART base address for owa5X

---
 plat/imx/imx8m/imx8mp/platform.mk | 3 ++-
 1 file changed, 2 insertions(+), 1 deletion(-)

diff --git a/plat/imx/imx8m/imx8mp/platform.mk b/plat/imx/imx8m/imx8mp/platform.mk
index fd63d257d..d39e40cbc 100644
--- a/plat/imx/imx8m/imx8mp/platform.mk
+++ b/plat/imx/imx8m/imx8mp/platform.mk
@@ -154,7 +154,8 @@ $(eval $(call add_define,BL32_BASE))
 BL32_SIZE		?=	0x2000000
 $(eval $(call add_define,BL32_SIZE))
 
-IMX_BOOT_UART_BASE	?=	0x30890000
+# Selected UART1 for owa5X device
+IMX_BOOT_UART_BASE	?=	0x30860000
 $(eval $(call add_define,IMX_BOOT_UART_BASE))
 
 $(eval $(call add_define,IMX8M_DDR4_DVFS))
